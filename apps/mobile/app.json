{
  "expo": {
    "name": "Savia SSM",
    "slug": "savia-ssm",
    "scheme": "savia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#104d78"
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.savia.ssm",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#104d78"
      },
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        { "cameraPermission": "Savia SSM necesită acces la cameră pentru a fotografia problemele de pe șantier." }
      ],
      [
        "expo-image-picker",
        { "photosPermission": "Savia SSM necesită acces la galerie pentru a atașa fotografii." }
      ],
      [
        "expo-location",
        { "locationAlwaysAndWhenInUsePermission": "Savia SSM utilizează locația pentru a identifica automat șantierul." }
      ],
      [
        "expo-notifications",
        { "icon": "./assets/notification-icon.png", "color": "#104d78" }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "placeholder-update-after-eas-init"
      },
      "router": {
        "origin": false
      }
    }
  }
}
