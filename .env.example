# ============================================
# SSM Management System — Environment Variables
# Copy to .env and fill in values
# ============================================

# --- Database ---
DATABASE_URL=postgresql://ssm_user:ssm_password@localhost:5432/ssm_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=ssm_user
DATABASE_PASSWORD=ssm_password
DATABASE_NAME=ssm_db

# --- JWT ---
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- Encryption (AES-256-GCM for CNP) ---
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# --- Storage ---
# Options: local, azure
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# Azure Blob Storage (Phase 3)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER=ssm-files

# --- Push Notifications (Expo Push Service) ---
# No API key needed for Expo Push — uses push tokens directly
# EXPO_ACCESS_TOKEN= (optional, for higher rate limits)

# --- Email (optional for MVP) ---
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@firma-constructii.ro

# --- App ---
APP_PORT=3000
APP_ENV=development
APP_URL=http://localhost:3000
MIN_APP_VERSION=1.0.0

# --- Redis (commented out — not needed for MVP) ---
# REDIS_URL=redis://localhost:6379
